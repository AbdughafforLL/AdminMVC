@model MVC.Models.OrganModels.CreateOrganDto
@{
	Layout = "_AdminLayout";
	ViewData["Title"] = "Create User";
}

@if (ViewBag.Message != null)
{
	<div class="alert alert-danger alert-bdleft-danger w-25 mx-auto">
		<button type="button" class="btn-close float-end fs-10" data-bs-dismiss="alert" aria-label="Close">
			<span aria-hidden="true">×</span>
		</button>
		<strong>@ViewBag.Message</strong>
	</div>
}

<div class="main-content side-content pt-0" data-select2-id="12">
	<div class="main-container container-fluid">
		<div class="inner-body">
			<!-- Page Header -->
			<div class="page-header">
				<div>
					<h2 class="main-content-title tx-24 mg-b-5">Добавить организация</h2>
					<ol class="breadcrumb">
						<li class="breadcrumb-item"><a asp-action="Index" asp-controller="Admin">Dashboard</a></li>
						<li class="breadcrumb-item"><a asp-action="Index" asp-controller="Organ">Organ</a></li>
						<li class="breadcrumb-item active" aria-current="page">Add user</li>
					</ol>
				</div>
				<div class="d-flex">
					<div class="justify-content-center">
						<button type="button" class="btn btn-white btn-icon-text my-2 me-2">
							<i class="fe fe-settings"></i>
							<span>Settings</span>
						</button>
					</div>
				</div>
			</div>
			<!-- End Page Header -->
			<!-- Row -->
			<div class="row row-sm">
				<div class="col-lg-12 col-md-12 col-md-12">
					<div class="card custom-card">
						<form asp-action="CreateOrgan" method="post" class="card-body">
							<div class="form-group">
								<label for="organName" class="tx-medium">Имя организации</label>
								<input asp-for="OrganName" type="text" id="organName" class="form-control" placeholder="Введите имя организации">
								<span asp-validation-for="OrganName" class="text-danger"></span>
							</div>
							<div class="card-footer mb-1">
								<button type="submit" class="btn btn-primary">Добавить</button>
								<a asp-action="Index" class="btn btn-danger">Отмена</a>
							</div>
						</form>
					</div>
				</div>
			</div>
			<!-- End Row -->
		</div>
	</div>
</div>