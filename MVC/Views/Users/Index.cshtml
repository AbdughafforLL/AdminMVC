@model List<MVC.Models.UserModels.GetUsersDto>
@{
	Layout = "_AdminLayout";
	ViewData["Title"] = "Users";
}

@if (ViewBag.Message != null)
{
	<div class="alert alert-danger alert-bdleft-danger w-25 mx-auto">
		<button type="button" class="btn-close float-end fs-10" data-bs-dismiss="alert" aria-label="Close">
			<span aria-hidden="true">×</span>
		</button>
		<strong>@ViewBag.Message</strong>
	</div>
}

<!-- Main Content-->
<div class="main-content side-content pt-0">
	<div class="main-container container-fluid">
		<div class="inner-body">
			<!-- Page Header -->
			<div class="page-header">
				<div>
					<h2 class="main-content-title tx-24 mg-b-5">Пользователей</h2>
					<ol class="breadcrumb">
						<li class="breadcrumb-item"><a asp-action="Index" asp-controller="Admin">Dashboard</a></li>
						<li class="breadcrumb-item active" aria-current="page">Users</li>
					</ol>
				</div>
				<div class="d-flex">
					<div class="justify-content-center">
						<button type="button" class="btn btn-white btn-icon-text my-2 me-2">
							<i class="fe fe-settings"></i>
							<span>Settings</span>
						</button>
						<button type="button" class="btn btn-primary my-2 btn-icon-text">
							<i class="fe fe-download-cloud bg-white-transparent text-white"></i>
							<span>Reports</span>
						</button>
					</div>
				</div>
			</div>

			<div class="col-lg-12 col-xl-9 col-md-12">
					<div class="card custom-card">
						<div class="card-header border-bottom">
							<a asp-action="CreateUser" class="step-btn btn btn-success mb-1">
								Добавить пользователя
							</a>
						</div>
						<div class="card-body">
							<div class="table-responsive">
								<table class="table table-bordered text-nowrap table-shopping-cart mb-0">
									<thead class="text-muted">
										<tr class="small text-uppercase">
											<th scope="col">User id</th>
											<th scope="col">User name</th>
											<th scope="col">ips</th>
											<th scope="col">inn</th>
											<th scope="col">FirstName</th>
											<th scope="col">lastName</th>
											<th scope="col">MiddleName</th>
											<th scope="col">FullName</th>
											<th scope="col">PhoneNumber</th>
											<th scope="col">Adress Text</th>
											<th scope="col">Adress Email</th>
											<th scope="col">Adress Website</th>
											<th scope="col">StatusName</th>
											<th scope="col">CreatedUser</th>
											<th scope="col">OrganName</th>
											<th scope="col">CreatedAt</th>
											<th scope="col">UpdatedAt</th>
										</tr>
									</thead>

									<tbody>
										@foreach (var user in Model)
										{
											<tr>
												<td>
													<p class="mb-0 mt-1 tx-14 px-1 py-1 text-center">@user.UserId</p>
												</td>
												<td>
													<p class="mb-0 mt-1 tx-14 px-1 py-1 text-center">@user.UserName</p>
												</td>
												<td>
													<p class="mb-0 mt-1 tx-14 px-1 py-1 text-center">@user.Ips</p>
												</td>
												<td>
													<p class="mb-0 mt-1 tx-14 px-1 py-1 text-center">@user.Inn</p>
												</td>
												<td>
													<p class="mb-0 mt-1 tx-14 px-1 py-1 text-center">@user.FirstName</p>
												</td>
												<td>
													<p class="mb-0 mt-1 tx-14 px-1 py-1 text-center">@user.LastName</p>
												</td>
												<td>
													<p class="mb-0 mt-1 tx-14 px-1 py-1 text-center">@user.MiddleName</p>
												</td>
												<td>
													<p class="mb-0 mt-1 tx-14 px-1 py-1 text-center">@user.FullName</p>
												</td>
												<td>
													<p class="mb-0 mt-1 tx-14 px-1 py-1 text-center">@user.PhoneNumber</p>
												</td>
												<td>
													<p class="mb-0 mt-1 tx-14 px-1 py-1 text-center">@user.AdrText</p>
												</td>
												<td>
													<p class="mb-0 mt-1 tx-14 px-1 py-1 text-center">@user.AdrEmail</p>
												</td>
												<td>
													<p class="mb-0 mt-1 tx-14 px-1 py-1 text-center">@user.AdrWebSite</p>
												</td>
												<td>
													<p class="mb-0 mt-1 tx-14 px-1 py-1 text-center">@user.StatusName</p>
												</td>
												<td>
													<p class="mb-0 mt-1 tx-14 px-1 py-1 text-center">@user.CreatedUser</p>
												</td>
												<td>
													<p class="mb-0 mt-1 tx-14 px-1 py-1 text-center">@user.OrganName</p>
												</td>
												<td>
													<p class="mb-0 mt-1 tx-14 px-1 py-1 text-center">@user.CreatedAt</p>
												</td>
												<td>
													<p class="mb-0 mt-1 tx-14 px-1 py-1 text-center">@user.UpdatedAt</p>
												</td>
												<td class="text-center">
													<a asp-action="DeleteUser" asp-route-userId="@user.UserId" class="remove-list tx-16 remove-button" data-abc="true">
														<i class="fe fe-trash text-danger me-2"></i>
													</a>
													<a asp-action="UpdateUser" asp-route-userId="@user.UserId" class="remove-list tx-16 remove-button" data-abc="true">
														<i class="fe fe-edit text-info"></i>
													</a>
												</td>
											</tr>
										}
									</tbody>
								</table>
							</div>
						</div>
					</div>
			</div>
		</div>
	</div>
</div>
<!-- End Main Content-->