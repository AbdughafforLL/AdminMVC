@model MVC.Models.AccountModels.LoginModel
@{
    Layout = "_AuthLayout";
}

@if (ViewBag.Message != null)
{
  @foreach (var message in @ViewBag.Message)
  {
    <p class="text text-danger">@message</p>
  }
}

<form asp-action="Login" method="post">
  <div class="container-fluid">
    <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
      <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
        <div class="bg-light rounded p-4 p-sm-5 my-4 mx-3">
          <div class="d-flex align-items-center justify-content-between mb-3">
            <h3>Авторизатция</h3>
          </div>
          <div class="form-floating mb-3">
            <input asp-for="UserName" type="text" class="form-control" id="UserName" placeholder="name@example.com">
            <label for="UserName">Имя пользователя</label>
            <p><span asp-validation-for="UserName" class="text-danger"></span></p>
          </div>
          <div class="form-floating mb-3">
            <input asp-for="Password" type="password" class="form-control" id="Password">
            <label for="Password">Пароль</label>
            <p><span asp-validation-for="Password" class="text-danger"></span></p>
          </div>
          <div class="d-flex align-items-center justify-content-between mb-4">
            <div class="form-check">
              <input type="checkbox" class="form-check-input" id="exampleCheck1">
              <label class="form-check-label" for="exampleCheck1">Check me out</label>
            </div>
            <a href="">Забыли пароль</a>
          </div>
          <button type="submit" class="btn btn-primary py-3 w-100 mb-4" asp-action="Login">Авторизатция</button>
          <p class="text-center mb-0">У вас нет учетной записи? <a asp-action="Register" >Регистрация</a></p>
        </div>
      </div>
    </div>
  </div>
</form>